# 서버 설정
PORT=3000
NODE_ENV=production

# 데이터베이스 설정 (MongoDB Atlas 추천)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/shalom_house?retryWrites=true&w=majority

# JWT 설정 (강력한 시크릿 키로 변경하세요!)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_with_strong_random_string
JWT_EXPIRE=7d

# 이메일 설정 (Gmail SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_app_password

# 파일 업로드 설정
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# 기타 설정
ADMIN_EMAIL=admin@shalomhouse.kr
SUPPORT_PHONE=1588-1234
SITE_URL=https://your-app-name.herokuapp.com

# 보안 설정
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000 